<%- include('../includes/head.ejs') %>
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>

            <main>
                <% if(errorMessage){ %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <form class="login-form" action="/login" method="POST">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="form-control">
                                <label for="email">E-Mail</label>
                                <input class="<%= validationErrors.find(e => e.params === 'email') ? 'invalid': '' %>" type="email" name="email" id="email" value="<%= oldInput.email %>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input class="<%= validationErrors.find(e => e.params === 'password') ? 'invalid': '' %>" type="password" name="password" id="password" value="<%= oldInput.password %>">
                            </div>
                            <button class="btn" type="submit">Login</button>
                        </form>
                        <div class="centered">
                            <a href='/reset' style="text-decoration: none; color: #ddd;">Reset Password</a>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>